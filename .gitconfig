[init]
        defaultBranch = main
[diff]
        tool = meld
[difftool]
        prompt = false
[merge]
        conflictstyle = diff3
[branch]
	# Show most recently changed branches first.
	sort = -committerdate
[alias]
	undo-commit = reset --soft HEAD^
	deleted-branches = branch -vv | grep ': gone]' | awk '{print }'

# URL shorthands
[url "git@github.com:"]

	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
